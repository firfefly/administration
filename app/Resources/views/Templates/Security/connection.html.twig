{% block body %}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form class="login100-form validate-form" action="{{path('login')}}" method="post">
                <span class="login100-form-title p-b-55">
                    <img id="logo" src="{{asset('images/logo.png')}}" >
                    <label id="login_label" for="username">Connexion</label>
                </span>
                <div class="wrap-input100 validate-input m-b-16">
                    <input class="input100" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Adresse mail ou nom d'utilisateur"/>
                    <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-envelope"></span>
                        </span>
                </div>
                <div class="wrap-input100 validate-input m-b-16">
                    <input class="input100" type="password" id="password" name="_password" placeholder="Mot de passe"/>
                    {#<label for="password">Password:</label>#}
                    <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-lock"></span>
                        </span>
                </div>
                <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
                >
        {#        <input type="hidden" name="_target_path" value="{{ path('index') }}" />#}
              {#  <input type="hidden" name="_failure_path" value="{{ path('index') }}" />#}
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <div class="container-login100-form-btn p-t-25">
                    <button class="login100-form-btn" type="submit">Connexion</button>
                </div>

            </form>
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
        </div>
    </div>
</div>

