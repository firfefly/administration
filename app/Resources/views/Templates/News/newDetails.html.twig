{% extends 'Templates/base.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{asset('css/main.css')}}" />
{% endblock %}
{% block menu %}
    {{ parent() }}
    <h1 class="titre_form"> {% if app.session.get('choosenBrand') is not null %} Les nouveautés {{app.session.get('choosenBrand').getName()}} {% endif %} </h1>
    <hr align="left" class="séparateur">
{% endblock %}
{% block body %}
    {% if errors is defined %}
        <div class=""error>
            <p> {{errors}} </p>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-sm-12">
            <form method="POST" enctype="multipart/form-data">
                <table id="formTab">
                    <tr>
                        <td> {{ form_label (form.department) }} </td>
                        <td> {{ form_widget (form.department) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.title) }} </td>
                        <td> {{ form_widget (form.title) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.caption) }} </td>
                        <td> {{ form_widget (form.caption) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.text) }} </td>
                        <td> {{ form_widget (form.text) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.image) }} </td>
                        <td> {{ form_widget (form.image) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.active) }} </td>
                        <td> {{ form_widget (form.active) }} </td>
                    </tr>
                    <tr>
                        <td> {{ form_label (form.date) }} </td>
                        <td> {{ form_widget (form.date) }} </td>
                    </tr>
                </table>
                <div id="formButton">
                    {{ form_widget(form.save) }}
                    <button type="button" id="backButton" onclick="document.location.replace('{{path('news')}}');"> Retour</button>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}

